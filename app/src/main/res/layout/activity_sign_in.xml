<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/stressfree"
    >



    <EditText
        android:id="@+id/usermail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="499dp"
        android:hint="mail"


        />



    <EditText
        android:id="@+id/userpassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="291dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="410dp"
        android:hint="password"
        android:drawableLeft="@drawable/btn_shape"
        />

    <Button
        android:id="@+id/signup_btn2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="284dp"
        android:hint="sign in"
        android:textColor="#ffff99"
        android:textStyle="bold"

        />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="144dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="107dp"
        android:text="agree to  privacy policy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_createaccount"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="197dp"
        android:text="create account"
        android:textColor="#ffff99"
        />


</RelativeLayout>