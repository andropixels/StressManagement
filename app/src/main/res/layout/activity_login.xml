<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
android:background="@color/yellowww"
    >


    <EditText
        android:id="@+id/usermail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
        android:hint="mail"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"



        />

    <EditText
        android:id="@+id/userpassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:layout_margin="10dp"
        android:hint="password"
        android:drawableLeft="@drawable/btn_shape"
        android:layout_below="@+id/usermail2"
        android:textColorHint="@color/black"

        />

    <Button
        android:id="@+id/signup_btn2"
        android:layout_width="100dp"
        android:layout_height="50dp"
  android:layout_below="@+id/userpassword2"
        android:hint="sign in"
        android:textColor="#ffff99"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:backgroundTint="#000fff"

        />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_btn2"
        android:text="agree to  privacy policy"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
         />

    <TextView
        android:id="@+id/txt_createaccount"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
     android:textStyle="bold"
        android:layout_below="@+id/checkBox2"
        android:text="create account"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>